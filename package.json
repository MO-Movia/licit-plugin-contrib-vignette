{
  "name": "@modusoperandi/licit-vignette",
  "version": "1.0.1",
  "type": "module",
  "subversion": "1",
  "description": "Vignette plugin built with ProseMirror",
  "main": "index.js",
  "types": "index.d.ts",
  "style": "styles.css",
  "repository": {
    "type": "git",
    "url": ""
  },
  "scripts": {
    "clean": "rm -rf dist/ bin/ && rm -f modusoperandi-licit-vignette-*.*.*.tgz",
    "lint:ts": "eslint src --ext .ts,.tsx --fix",
    "lint:css": "echo 'no CSS files available'",
    "lint": "npm run lint:css & npm run lint:ts",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "test": "jest --coverage",
    "debug": "node --debug-brk --inspect ./node_modules/.bin/jest -i",
    "ci:bom": "cyclonedx-npm --ignore-npm-errors --short-PURLs --output-format XML --output-file dist/bom.xml",
    "ci:build": "tsc --build && copyfiles --up 1 \"src/**/*.css\" dist  && copyfiles package.json dist"
  },
  "peerDependencies": {
    "@modusoperandi/licit-ui-commands": "^1.0.0"
  },
  "devDependencies": {
    "@cyclonedx/cyclonedx-npm": "^1.11.0",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.4.1",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.0",
    "@types/node": "^22.0.0",
    "@types/react": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "ajv": "^8.12.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^28.2.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.31.10",
    "husky": "^9.0.10",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.2.2",
    "jest-environment-jsdom": "^29.2.2",
    "jest-json": "^2.0.0",
    "jest-junit": "^16.0.0",
    "jest-prosemirror": "^3.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.0",
    "react-test-renderer": "^18.2.0",
    "resize-observer-polyfill": "^1.5.1",
    "stylelint": "^16.2.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-prettier": "^5.0.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3",
    "url": "^0.11.0"
  },
  "overrides": {
    "libxmljs2": "^1.0.0"
  },
  "importSort": {
    ".js": {
      "parser": "babylon",
      "style": "module-grouping"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.css": [
      "stylelint --fix"
    ],
    "!(*test|*.setup).ts": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}